{
  "name": "chessmasternotes",
  "version": "0.1.1",
  "description": "A chess game viewer/editor",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "build": "tsc -noEmit -skipLibCheck && vite build",
    "dev": "vite build --watch --mode development",
    "preversion": "git add . && git diff --staged --quiet || git commit -m \"chore: pr√©-release changes\"",
    "version": "node scripts/version-bump.mjs",
    "postversion": "git add manifest.json versions.json CHANGELOG.md && git commit --amend --no-edit && git-cliff && git push --follow-tags",
    "release": "npm version patch"
  },
  "keywords": [],
  "devDependencies": {
    "@types/chess.js": "^0.13.7",
    "@types/node": "^22.15.2",
    "builtin-modules": "^5.0.0",
    "git-cliff": "^2.9.1",
    "obsidian": "1.8.7",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.3",
    "vite-plugin-static-copy": "^3.0.2"
  },
  "dependencies": {
    "chess.js": "^1.2.0",
    "chessground": "^9.1.1",
    "nanoid": "^5.1.5"
  }
}
